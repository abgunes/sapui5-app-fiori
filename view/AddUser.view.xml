<mvc:View
  controllerName="sap.usrmgm.view.AddUser"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form">
  <Page title="Add User">
    <l:Grid
      defaultSpan="L12 M12 S12"
      width="auto">
      <l:content>
        <f:SimpleForm
          id="idAddUserForm"
          minWidth="800"
          maxContainerCols="2"
          editable="true"
          layout="ResponsiveGridLayout"
          title="New User"
          labelSpanL="3"
          labelSpanM="3"
          emptySpanL="4"
          emptySpanM="4"
          columnsL="1"
          columnsM="1"
          class="editableForm">
          <f:content>
            <Label text="Email" />
            <Input value="{newUser>/Email}" />
            <Label text="First Name" />
            <Input value="{newUser>/Firstname}" />
            <Label text="Last Name" />
            <Input value="{newUser>/Lastname}" />
            <Label text="Age" />
            <Input value="{newUser>/Age}" />
            <Label text="Address" />
            <Input value="{newUser>/Address}" />
          </f:content>
        </f:SimpleForm>
      </l:content>
    </l:Grid>
    <footer>
      <Bar>
        <contentRight>
          <Button 
            text="Save"
            type="Emphasized"
            press="onSave" />
          <Button
            text="Cancel"
            press="onCancel" />
        </contentRight>
      </Bar>
    </footer>
  </Page>
</mvc:View>