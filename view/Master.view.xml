<mvc:View 
  controllerName="sap.usrmgm.view.Master" displayBlock="true"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">
  <Page id="page" title="Users">
    <subHeader>
      <Bar id="searchBar">
        <contentMiddle>
          <SearchField
            id="searchField"
            search="onSearch"
            width="100%">
          </SearchField>
        </contentMiddle>
      </Bar>
    </subHeader>
    <content>
      <List 
        id="list"
        items="{/YWJ_USERSSet}"
        mode="SingleSelectMaster"
        select="onSelect">
          <items>
            <ObjectListItem
              xmlns="sap.m"
              title="{
                  parts: [
                     {path: 'Firstname'},
                     {path: 'Lastname'}
                  ],
                  formatter: 'sap.usrmgm.util.Formatter.joinFullname'
              }"
              number="{
                     {path: 'Uuid'},
                     formatter: 'sap.usrmgm.util.Formatter.uuidPrettifier'
              }"
              icon="sap-icon://employee">
            </ObjectListItem>
          </items>
      </List>
    </content>
    <footer>
      <Bar>
        <contentRight>
          <Button
            icon="sap-icon://add"
            press="onAddUser" />
        </contentRight>
      </Bar>
    </footer>
  </Page>
</mvc:View>
