<mvc:View
  controllerName="sap.usrmgm.view.Detail"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form">
  <Page title="Update User">
    <l:Grid
      defaultSpan="L12 M12 S12"
      width="auto">
      <l:content>
        <f:SimpleForm
          id="idDetailUserForm"
          minWidth="800"
          maxContainerCols="2"
          editable="true"
          layout="ResponsiveGridLayout"
          title="Selected User"
          labelSpanL="3"
          labelSpanM="3"
          emptySpanL="4"
          emptySpanM="4"
          columnsL="1"
          columnsM="1"
          class="editableForm">
          <f:content>
            <Label text="First Name" />
            <Input value="{Firstname}" />
            <Label text="Last Name" />
            <Input value="{Lastname}" />
            <Label text="Age" />
            <Input value="{Age}" />
            <Label text="Address" />
            <Input value="{Address}" />
          </f:content>
        </f:SimpleForm>
      </l:content>
    </l:Grid>
    <footer>
      <Bar>
        <contentRight>
          <Button 
            text="Update"
            type="Emphasized"
            press="onUpdate" />
        </contentRight>
      </Bar>
    </footer>
  </Page>
</mvc:View>